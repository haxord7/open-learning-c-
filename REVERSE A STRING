//REVERSE A STRING


#include<stdio.h>
#include<string.h>

int main()

{
    char string[1000],temp;
    int i,j;
    
    printf("enter a string ");
    
    
       scanf("%s",string);
    
       i=0;
       j=strlen(string)-1;
    
           while(i<j)
              {
                   temp=string[i];
                   string[i]=string[j];
                   string[j]=temp;
                   i++;
                   j--;
    
              }
       printf("Reverse string is %s",string);
    return 0;
}
